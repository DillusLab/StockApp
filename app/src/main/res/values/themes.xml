<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TODO: Custom Style -->
    <style name="styleTextButtom">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="styleTextDescription">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="styleTextTitle">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>