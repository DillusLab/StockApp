<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <!--<item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- TODO: Custom Style -->

    <!-- EditText Style -->
    <style name="styleEditText">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColor">@color/colorPrimaryDarkText</item>

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/editTextSize</item>
        <item name="android:background">@null</item>

        <item name="android:layout_weight">1</item>

        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <!-- EditText LinearLayout Style -->
    <style name="styleEditTextLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/background_input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Button Essential Style -->
    <style name="styleButtonEssential">
        <item name="android:textSize">@dimen/textSizeTitleMedium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:elevation">@dimen/elevation</item>
    </style>

    <!-- TextView Style -->
    <style name="styleTextTitle">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="styleTextDescription">
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:lineSpacingExtra">8dp</item>
    </style>

    <style name="styleTextActionBarTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSizeTitleLarge</item>
    </style>

    <style name="styleEditTextTitle">
        <item name="android:textSize">@dimen/textSizeBodyMedium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ActioinBar Style -->
    <style name="styleActionBarLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>

    <!-- AppBar Style -->
    <style name="styleAppBarLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
    </style>


</resources>